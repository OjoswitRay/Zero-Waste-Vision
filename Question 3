import pandas as pd
import numpy as np

# Create the DataFrame
data = {
    'Name': [f'Student_{i}' for i in range(1, 11)],
    'Subject': np.random.choice(['Math', 'Science', 'History', 'English'], 10),
    'Score': np.random.randint(50, 101, 10),
    'Grade': ''
}

df = pd.DataFrame(data)

# Assign grades based on scores
def assign_grade(score):
    if score >= 90:
        return 'A'
    elif score >= 80:
        return 'B'
    elif score >= 70:
        return 'C'
    elif score >= 60:
        return 'D'
    else:
        return 'F'

df['Grade'] = df['Score'].apply(assign_grade)

# Print sorted by Score (descending)
print("DataFrame sorted by Score (descending):")
print(df.sort_values('Score', ascending=False))
print("\n")

# Calculate average score per subject
print("Average score per subject:")
print(df.groupby('Subject')['Score'].mean())
print("\n")

# Filter function for A/B grades
def pandas_filter_pass(dataframe):
    return dataframe[dataframe['Grade'].isin(['A', 'B'])]

# Display passing students
print("Students with A or B grades:")
print(pandas_filter_pass(df))
